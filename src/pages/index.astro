---
import TypedText from "@/components/TypedText.astro";
import Layout from "@/layouts/Layout.astro";
import NavPages from "@/components/NavPages.astro";
---

<Layout>
  <div
    class="flex flex-col gap-3 items-start sm:items-center text-left sm:text-center justify-center py-5 px-5"
  >
    <h1 class="text-2xl">Raynhard Anthony Yray</h1>

    <TypedText
      strings={[
        "Full Stack Developer",
        "Photo Editor",
        "Video Editor",
        "Network Admin",
        "Tech Enthusiast",
      ]}
      speed={50}
      loop={true}
      className="text-xl"
    />
  </div>

  <NavPages isIndex="true" />
</Layout>
