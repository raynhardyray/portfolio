---
import Layout from "@/layouts/Layout.astro";
import projects from "@/types/projectsData.json";
import ProjectCards from "@/components/Cards/ProjectCards.astro";

var projectsCount = projects.length;
---

<Layout title="Projects | Raynhard Anthony Yray">
  <div class="flex flex-col gap-3 space-y-3">
    <div>
      <h1 class="text-2xl">Projects[{projectsCount}]</h1>
      <p>(work in progress)</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
      {
        projects.reverse().map((project) => (
          <ProjectCards 
            projectImage={project.image}
            projectTitle={project.title}
            projectDescription={project.description}
            projectLink={project.link}
            projectGithub={project.github}
            projectTags={project.tags}
          />
        ))
      }
    </div>
  </div>
</Layout>
