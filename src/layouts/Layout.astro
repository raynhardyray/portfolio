---
import HeaderSection from "@/sections/HeaderSection.astro";
import "@styles/global.css";

const { title = "Raynhard's Portfolio" } = Astro.props;
const pathname = Astro.url.pathname;
const showHeader = pathname !== "/";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    {showHeader && <HeaderSection />}
    <main
      class="min-h-screen flex flex-col justify-center items-center p-5 max-w-4xl mx-auto"
    >
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
